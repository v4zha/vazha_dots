{
	"rpc.enabled":true,
	"rpc.showProblems":false,
	"rpc.detailsViewing": "{workspace_folder}",
	"rpc.detailsEditing":"{workspace_folder}",
	"rpc.lowerDetailsEditing":"{file_name} : )",
	"rpc.lowerDetailsViewing": "{file_name} : )",
	 "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
